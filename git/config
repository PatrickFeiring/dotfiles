[alias]
    c = commit
    d = diff
    dc = diff --cached
    l = "log --format='%C(auto) %h %d %s'"
    shh = show HEAD
    st = status

    lease = push --force-with-lease

    set-blame-file = "!git config blame.ignoreRevsFile .git-blame-ignore-revs"
    set-private-user = "!git config user.name 'Patrick Feiring' && git config user.email 'pfeiring@live.com'"

    sync-main = "!git fetch origin main:main"
    sync-master = "!git fetch origin master:master"

    tip = "!git fetch origin main && git rebase origin/main"

[blame]
    markIgnoredLines = true
    markUnblamableLines = true

[branch]
    sort = -committerdate

[core]
    excludesfile = ~/.config/git/gitignore_global

[diff]
    colorMoved = zebra

[include]
    path = ~/.config/git/config_local

[init]
    defaultBranch = main

[merge]
    conflictstyle = diff3

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[rebase]
    autosquash = true
